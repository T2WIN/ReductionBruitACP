<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.collections.FXCollections?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import java.lang.String?>

<VBox fx:id="vbox1" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.PrimaryController">
   <children>
      <Label text="DÉBRUITAGE D'IMAGE PAR ANALYSE EN COMPOSANTES PRINCIPALES" />
      <Label text = "        "/>
      <Label text="Choisissez l'écart type du bruit : " />
      <ChoiceBox fx:id="choiceSigma" value="10">
         <items>
            <FXCollections fx:factory="observableArrayList">
                  <String fx:value="10" />
                  <String fx:value="20" />
                  <String fx:value="30" />
            </FXCollections>
         </items>
      </ChoiceBox>
  
     
      <Label text = "        "/>
      <Label text="Choisissez la taille des patchs : " />
      <TextArea fx:id="outputText" prefHeight="5.0" prefWidth="20.0" maxWidth="30.0" wrapText="true" />
      
       <Label text = "        "/>
      <Label text="Choisissez le type d'extraction de patchs : " />
      <ChoiceBox fx:id="choiceMethode" value="Global" onAction="#updatePrimary">
         <items>
            <FXCollections fx:factory="observableArrayList">
                  <String fx:value="Global" />  
                  <String fx:value="Local" />
            </FXCollections>
         </items>
      </ChoiceBox>

      <Label text = "        "/>
      <Label text="Choisissez le type de seuil : " />
      <ChoiceBox fx:id="choiceSeuil" value="VisuShrink">
         <items>
            <FXCollections fx:factory="observableArrayList">
                  <String fx:value="VisuShrink" />
                  <String fx:value="BayesShrink" />     
            </FXCollections>
         </items>
      </ChoiceBox>

      <Label text = "        "/>
      <Label text="Choisissez le type de seuillage : " />
      <ChoiceBox fx:id="choiceSeuillage" value="Seuillage dur">
         <items>
            <FXCollections fx:factory="observableArrayList">
                  <String fx:value="Seuillage dur" />
                  <String fx:value="Seuillage doux" />     
            </FXCollections>
         </items>
      </ChoiceBox>

      <Label text = "        "/>
   </children>
   <Button fx:id="myButton" text="Commencer" onAction="#switchToSecondary" />

   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

</VBox> 
